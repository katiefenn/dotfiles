# Helper functions
source ~/.dotfiles/notes
source ~/.dotfiles/todos
source ~/.dotfiles/focuses

# Aliases
source ~/.dotfiles/aliases

# Vault config
# source ~/.dotfiles/vault

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# PATH
export PATH=$PATH:/Users/katie.fenn/Library/Python/2.7/bin #pip
export PATH=$PATH:/Applications/Sublime\ Text.app/Contents/SharedSupport/bin # Sublime Text

# History
unsetopt inc_append_history
unsetopt share_history
